<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="40dp"
        android:orientation="vertical"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="60"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/mLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="100"
                android:orientation="horizontal">


                <LinearLayout
                    android:id="@+id/facebookButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:weightSum="100"
                    android:orientation="vertical"
                    android:layout_weight="50"
                    android:background="@drawable/fb_bg" >

                    <RelativeLayout
                        android:id="@+id/fbBtnRelative"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_weight="50"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/fbImg"
                            android:layout_width="match_parent"
                            android:visibility="visible"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="1dp"
                            android:layout_height="match_parent" />

                        <com.mobatia.bskl.manager.TextViewFontSansProRegularColorWhite
                            android:id="@+id/fbTextViewOnly"
                            style="@style/textstyleblacklow"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:layout_alignParentTop="true"
                            android:gravity="center_horizontal"
                            android:text=""
                            android:visibility="gone" />

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_weight="50"
                        android:layout_height="0dp">

                        <com.mobatia.bskl.manager.TextViewFontSansProRegularColorWhite
                            android:id="@+id/fbTextView"
                            style="@style/textstyleblacklowsocial"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_alignParentTop="true"
                            android:layout_above="@+id/fbImgs"
                            android:layout_marginRight="5dp"
                            android:maxLines="3"
                            android:gravity="center_horizontal"
                            android:text=""
                            android:visibility="invisible" />
                        <ImageView
                            android:id="@+id/fbImgs"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginBottom="15dp"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/social_media_fb"/>
                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/instagramButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_weight="50"
                    android:background="@drawable/in_bg"
                    android:orientation="vertical"
                    android:weightSum="100">


                    <RelativeLayout
                        android:id="@+id/instagramBtnRelative"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_weight="50"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/instagramImg"
                            android:layout_width="match_parent"
                            android:visibility="visible"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="1dp"
                            android:layout_height="match_parent" />
                        <com.mobatia.bskl.manager.TextViewFontSansProRegularColorWhite
                            android:id="@+id/InstaTextViewOnly"
                            style="@style/textstyleblacklow"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:layout_margin="5dp"
                            android:gravity="bottom|center_horizontal"
                            android:visibility="gone" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_weight="50"
                        android:layout_height="0dp">

                        <com.mobatia.bskl.manager.TextViewFontSansProRegularColorWhite
                            android:id="@+id/instaTextView"
                            style="@style/textstyleblacklowsocial"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_alignParentTop="true"
                            android:layout_above="@+id/instImg"
                            android:layout_marginRight="5dp"
                            android:gravity="center_horizontal"
                            android:text=""
                            android:maxLines="3"
                            android:visibility="invisible" />
                        <ImageView
                            android:id="@+id/instImg"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginBottom="15dp"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/social_media_in"/>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="40"
            android:background="@drawable/you_bg"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/youtubeBtnRelative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/youtubeImg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"


                    />
                <ImageView
                    android:id="@+id/yoImg"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/youtube"/>

            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>