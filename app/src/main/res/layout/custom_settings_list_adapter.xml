<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/relSub"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="5dp" >

        <com.mobatia.bskl.manager.TextViewFontSansProRegularColorBlack
            android:id="@+id/listTxtTitle"
            style="@style/textstyleblacklogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="name"
            android:textSize="17dp"
            android:layout_toLeftOf="@+id/arrowImg"
            android:layout_alignParentLeft="true"
            />

        <com.mobatia.bskl.manager.TextViewFontSansProRegular
            android:id="@+id/txtUser"
            style="@style/textstyleblacklogoutuser"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginRight="5dp"
            android:layout_below="@+id/listTxtTitle"
            android:visibility="gone"
            android:text="email"
            android:textColor="@color/logout_user"
            android:layout_toLeftOf="@+id/arrowImg"
            android:layout_alignParentLeft="true"
            />


        <ImageView
            android:id="@+id/arrowImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/arrow" />

        <ImageView
            android:id="@+id/toggle"
            android:layout_width="60dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:src="@drawable/switch_on"
            android:layout_height="50dp" />


    </RelativeLayout>

</RelativeLayout>
